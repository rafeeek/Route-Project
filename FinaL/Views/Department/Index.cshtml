                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>*@
                <div class="body m-4">
                    <div class="text-left mb-3"><a asp-controller="Department" asp-action="Creat"><button class="btn btn-outline-primary">Add New Department</button></a></div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">

                            <thead>
                                <tr class="table-primary">
                                    <th>Id</th>
                                    <th>Department Name</th>
                                    <th>Department Code</th>
                                    <th>Other</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.DepartmentCode</td>
                                        <td class="text-center">
                                            <a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id"><button class="btn btn-cyan"><i class="far fa-address-card"></i></button></a>
                                            <a asp-controller="Department" asp-action="Update" asp-route-id="@item.Id"><button class="btn btn-info"><i class="far fa-edit"></i></button></a>
                                            <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-danger"><i class="fas fa-trash"></i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section table{
    <script>
        $(function () {
            $('.js-basic-example').DataTable({
                responsive: true,
                paging: true,
                pageLength: 5,
                bSort: true,
                bFilter: true,
                bLengthChange: true,
                bInfo: true,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],

            });
        });
    </script>
}
