@model B_Layer.Models.DepartmentVM

@{
    ViewData["Title"] = "Creat";
    Layout = "~/Views/Layout/M_Layout.cshtml";
}

<center>
    <h1 class="mb-5">Create New Department</h1>



    <div class="w-50 mx-auto py-5 text-left">
        <div asp-validation-summary="All"></div>

        <form asp-controller="Department" asp-action="Creat" class="form-group">

            <label>Department Name</label>
            <input class="form-control" asp-for="DepartmentName" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>

            <br />
            <br />

            <label>Department Code</label>
            <input class="form-control" asp-for="DepartmentCode" />
            <span asp-validation-for="DepartmentCode" class="text-danger"></span>

            <br />
            <br />
            <button type="submit" class="btn btn-primary ">Create</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </form>
    </div>

</center>

@section Validation{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


